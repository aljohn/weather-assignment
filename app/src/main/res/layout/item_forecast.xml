<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/default_item_vertical_margin"
    android:paddingBottom="@dimen/default_item_vertical_margin"
    android:paddingStart="@dimen/default_screen_horizontal_margin"
    android:paddingEnd="@dimen/default_screen_horizontal_margin"
    android:background="?attr/selectableItemBackground"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        tools:src="@drawable/a01d"
        android:layout_alignTop="@id/txt_today"
        android:id="@+id/img_weather_icon"
        android:scaleType="centerInside"
        android:layout_marginEnd="@dimen/item_image_margin"
        android:layout_width="@dimen/item_image_size"
        android:layout_height="@dimen/item_image_size" />

    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/img_weather_icon"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_date"
            android:textSize="@dimen/subtitle_text_size"
            android:text="@string/today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            tools:text="25 C"
            android:textSize="@dimen/item_title_text_size"
            android:textStyle="bold"
            android:textColor="@color/textColorDefault"
            android:id="@+id/txt_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_forecast"
            tools:text="Freezing Fog"
            android:textSize="@dimen/default_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>
